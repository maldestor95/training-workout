{
    "name": "fitness_tracker",
    "version": "0.0.1",
    "description": "template setup for a TypeScript project running on NodeJS",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && node build/index.js",
        "lint": "eslint . --ext .ts",
        "start:dev": "nodemon",
        "build": "rimraf ./build && tsc",
        "test": "mocha -r ts-node/register tests/**/*.spec.ts --colors",
        "test:dev": "mocha -r ts-node/register tests/**/*.spec.ts --colors --bail --watch --watch-files tests/ src/"
    },
    "keywords": [],
    "author": "Ludovic Deparis",
    "homepage": "https://github.com/maldestor95/nodejs_typescript_template",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.6.2",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "chai": "^4.2.0",
        "eslint": "^7.7.0",
        "husky": "^4.2.5",
        "mocha": "^8.1.3",
        "nodemon": "^2.0.4",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
